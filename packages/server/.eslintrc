{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "script",
    "ecmaVersion": 2023
  },
  "plugins": ["@typescript-eslint"],
  "env": {
    "node": true,
    "amd": true
  },
  "rules": {
    "@typescript-eslint/no-explicit-any": "off"
  },
  "ignorePatterns": ["/__tests__/**/*"],
  "extends": [
    "prettier",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ]
}
